<?xml version="1.0" encoding="utf-8"?>
<ScrollView>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <sgb.tasks.SGEdit
                    android:id="@+id/nom"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Nom Comercial" />

                <requestFocus />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <sgb.tasks.SGEdit
                    android:id="@+id/nomfiscal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Nom Fiscal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <sgb.tasks.SGEdit
                    android:id="@+id/contacte"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contacte"
                    android:inputType="text|textMultiLine|textNoSuggestions"
                    android:textColorHint="@color/puzzle_light" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <sgb.tasks.SGEdit
                    android:id="@+id/telefon1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:editable="false"
                    android:hint="Telèfon 1"
                    android:inputType="textNoSuggestions|phone"
                    android:textColorHint="@color/puzzle_light" />

                <sgb.tasks.SGEdit
                    android:id="@+id/telefon2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:editable="false"
                    android:hint="Telèfon 2"
                    android:inputType="textNoSuggestions|phone"
                    android:textColorHint="@color/puzzle_light" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <sgb.tasks.SGEdit
                    android:id="@+id/telefon3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:editable="false"
                    android:hint="Telèfon 3"
                    android:inputType="textNoSuggestions|phone"
                    android:textColorHint="@color/puzzle_light" />

                <sgb.tasks.SGEdit
                    android:id="@+id/mobil"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:editable="false"
                    android:hint="Mòbil"
                    android:inputType="textNoSuggestions|phone"
                    android:textColorHint="@color/puzzle_light" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <sgb.tasks.SGEdit
                    android:id="@+id/nif"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="CIF/NIF"
                    android:inputType="textNoSuggestions" >
                </sgb.tasks.SGEdit>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <sgb.tasks.SGEdit
                    android:id="@+id/mail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="e-mail"
                    android:inputType="textNoSuggestions|textEmailAddress" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <sgb.tasks.SGEdit
                    android:id="@+id/adreca"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Adreça"
                    android:inputType="textMultiLine" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <sgb.tasks.SGEdit
                    android:id="@+id/poblacio"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Població"
                    android:inputType="text|textMultiLine|textNoSuggestions" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <sgb.tasks.SGEdit
                    android:id="@+id/codipostal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="C.Postal"
                    android:inputType="text|textMultiLine|textNoSuggestions"
                    android:textColorHint="@color/puzzle_light" />

                <sgb.tasks.SGEdit
                    android:id="@+id/provincia"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:ems="10"
                    android:hint="Provincia"
                    android:inputType="text|textMultiLine|textNoSuggestions" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <sgb.tasks.SGEdit
                    android:id="@+id/fpag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Forma de Pagament"
                    android:inputType="text|textNoSuggestions"
                    android:textColorHint="@color/puzzle_light" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <sgb.tasks.SGEdit
                    android:id="@+id/banc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Banc"
                    android:inputType="text|textMultiLine|textNoSuggestions"
                    android:textColorHint="@color/puzzle_light" />

                <sgb.tasks.SGEdit
                    android:id="@+id/agencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Agencia"
                    android:inputType="text|textMultiLine|textNoSuggestions"
                    android:textColorHint="@color/puzzle_light" />

                <sgb.tasks.SGEdit
                    android:id="@+id/compte"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:ems="10"
                    android:hint="Compte"
                    android:inputType="text|textMultiLine|textNoSuggestions" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <sgb.tasks.SGEdit
                    android:id="@+id/observacions"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:hint="Observacions"
                    android:inputType="text|textMultiLine|textNoSuggestions" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_risc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Risc :" />

                <sgb.tasks.SGEdit
                    android:id="@+id/risc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:hint=" Risc"
                    android:inputType="text|textNoSuggestions" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=" Saldo :"
                    android:textColorHint="@color/puzzle_light" />

                <sgb.tasks.SGEdit
                    android:id="@+id/saldo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:hint="Saldo"
                    android:inputType="text|textNoSuggestions" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=" Disp. :"
                    android:textColorHint="@color/puzzle_light" />

                <sgb.tasks.SGEdit
                    android:id="@+id/disponible"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:hint="Dispon."
                    android:inputType="text|textNoSuggestions" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/linies_gravar"
                    android:layout_width="60dp"
                    android:layout_height="200dp"
                    android:background="@drawable/record"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>