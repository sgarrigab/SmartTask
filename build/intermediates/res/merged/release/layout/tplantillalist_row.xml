<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="75dp"
    android:layout_marginRight="5dip"
    android:background="@drawable/list_selector"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="horizontal"
    android:padding="3dip"
    android:weightSum="1"
    android:baselineAligned="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:padding="3dip" >

        <ImageView
            android:id="@+id/listrow_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="4px"
            android:src="@android:drawable/btn_plus" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/l4"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_centerInParent="false"
        android:layout_marginTop="1dip"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/listrow_text1"
                android:gravity="center_vertical"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/listrow_text5"
                android:gravity="center_vertical"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="0.13"
                android:singleLine="true"
                android:textStyle="normal"
                android:textColor="#000000"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/listrow_text2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:singleLine="true"
                android:textColor="#040404"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/listrow_text3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="#040404"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/listrow_text4"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="#040404"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/listrow_text6"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="#040404"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="5dip"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:padding="3dip" >

        <sgb.tasks.SGEdit
            android:id="@+id/listrow_numeric1"
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:inputType="numberDecimal"
            android:textColor="@color/puzzle_hint_0" />

        <TextView
            android:id="@+id/listrow_boto_comptador"
            android:layout_width="58dp"
            android:layout_height="52dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/tick"
            android:clickable="true"
            android:focusable="false"
            android:gravity="center_vertical|center_horizontal"
            android:longClickable="true"
            android:text=""
            android:textColor="#FFF"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>

